{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2015",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir":"src",
    "ignoreDeprecations":"5.0",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*":[
        "./src/*"
      ]
    },
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types"
    ]
  },
  "exclude": [
    "dist",
    // "test",
    "node_modules",
    "vite.config.ts"
  ]
}
