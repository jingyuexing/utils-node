{
    "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentSize": 2,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "nursery": {
                "useCamelCase": "warn"
            },
            "style": {
                "recommended": true
            }
        }
    },
    "files": {
        "ignore": [
            "coverage/*",
            "dist/*",
            "html/*"
        ]
    }
}
